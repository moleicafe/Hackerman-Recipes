@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!--Cascading Stylesheet -->
<link rel="stylesheet" href="~/css/index.css" />
<!--Fonts-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

<div class="header-background">
    <div class="opacity">
        <div class="header-wrapper">
            <h1>Hackerman<br />&nbsp;&nbsp;&nbsp;Recipes</h1>
        </div>
    </div>
</div>

<div class="row recipe-header">
    <div class="col-sm-12">
        <h2>Recipes</h2>
    </div>
</div>


<div class="recipes row">
    <a href="~/Recipes" target="_self">
        <section class="recipe-item">
            <div id="Carousel" class="carousel slide carousel-left" data-ride="carousel" data-interval="8000">
                <ol class="carousel-indicators">
                    <li data-target="#Carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#Carousel" data-slide-to="1"></li>
                    <li data-target="#Carousel" data-slide-to="2"></li>
                    <li data-target="#Carousel" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="img-fluid" src="~/Images/brownies.jpg" alt="First Slide" />
                    </div>

                    <div class="carousel-item">
                        <img class="img-fluid" src="~/Images/pasta.jpg" alt="Second Slide" />
                    </div>

                    <div class="carousel-item">
                        <img class="img-fluid" src="~/Images/mushroom-soup.jpg" alt="Third Slide" />
                    </div>

                    <div class="carousel-item">
                        <img class="img-fluid" src="~/Images/mac-and-cheese.jpg" alt="Fourth Slide" />
                    </div>


                    <a class="carousel-control-prev" id="prev-arrow" href="#Carousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" id="next-arrow" href="#Carousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </section>
    </a>

</div>

