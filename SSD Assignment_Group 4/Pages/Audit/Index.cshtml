@page
@model SSD_Assignment_Group_4.Pages.Audit.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<form>
    <div class="form-group">
        <select asp-for="AuditUsername" asp-items="Model.Username">
            <option value="">All</option>
        </select>
        Search Audit: <input asp-for="SearchStringAudit" size="60" placeholder="Filter by Audit Action" />
        <input type="submit" value="Search" asp-page-handler="Test" />
        <p>
            <span asp-validation-for="SearchStringAudit" class="text-danger"></span>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].AuditActionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].DateTimeStamp)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AuditRecord)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuditActionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeStamp)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Audit_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}